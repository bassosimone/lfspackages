#!/bin/bash

set -euo pipefail

. lib/core.bash

for arg in "$@"; do
    if [[ "$arg" == "-h" || "$arg" == "--help" ]]; then
        echo ""
        echo "Prints dependencies of the given packages."
        echo ""
        echo "usage: $0: dep..."
        echo ""
        echo "example: $0 ./ports/*/*/*"
        echo ""
        exit 0
    fi
done

while [[ $# -gt 0 ]]; do
    echo $1: $(pkg_cli_printdeps $1 | sort -u)
    shift
done
